cleverbot = require('cleverbot-node')

module.exports = (bot) ->
  c = new cleverbot()

  bot.respond /c (.*)/i, (msg) ->
    data = msg.match[1].trim()
    cleverbot.prepare(( -> c.write(data, (c) => msg.send(c.message))))
