# Description:
# Make a slogan using sloganizer.net
#
# Dependencies:
# None
#
# Configuration:
# None
#
# Commands:
# imubot slogan (.*)
#
# Author:
# DafyddCrosby
#

getSlogan = (msg, query) ->
  msg.http("http://www.sloganizer.net/en/outbound.php?slogan=#{query}")
    .get() (err, res, body) ->
      slogan = body.replace /<.*?>/g, ""
      msg.send slogan unless err

module.exports = (bot) ->
  bot.hear /slogan (.*)/i, (msg) ->
    getSlogan msg, msg.match[1]
